{
  "name": "@sprucelabs/data-stores",
  "publishConfig": {
    "access": "public"
  },
  "version": "28.3.99",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "A standardized way to store data across many storage platforms. This is NOT an ORM. Just a simple adapter layer built to make it easy to work with storage!",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/data-stores",
  "bugs": {
    "url": "https://github.com/sprucelabsai/data-stores/issues"
  },
  "skill": {
    "namespace": "data-stores",
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-core-schemas",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "boot.sender": "ACTION=sender node build/index",
    "build": "yarn build.dev",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/error": "^6.0.442",
    "@sprucelabs/globby": "^2.0.403",
    "@sprucelabs/schema": "^30.0.483",
    "@sprucelabs/spruce-skill-utils": "^31.0.510",
    "just-clone": "^6.2.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.9.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^6.0.426",
    "@sprucelabs/jest-json-reporter": "^8.0.442",
    "@sprucelabs/resolve-path-aliases": "^2.0.421",
    "@sprucelabs/semantic-release": "^5.0.2",
    "@sprucelabs/test": "^9.0.49",
    "@sprucelabs/test-utils": "^5.1.391",
    "@types/lodash": "^4.17.10",
    "@types/nedb": "^1.8.16",
    "@types/node": "^22.7.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=12",
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
