{
  "name": "@sprucelabs/data-stores",
  "publishConfig": {
    "access": "public"
  },
  "version": "19.0.51",
  "files": [
    "build/**/*",
    "!build/__tests__",
    "!build/esm/__tests__",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "A way to store data",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/data-stores",
  "bugs": {
    "url": "https://github.com/sprucelabsai/data-stores/issues"
  },
  "skill": {
    "namespace": "data-stores",
    "upgradeIgnoreList": [
      "globby",
      "mongodb",
      "@types/mongodb",
      "@types/node",
      "@sprucelabs/spruce-core-schemas",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "boot.sender": "ACTION=sender node build/index",
    "build": "yarn build.dev",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test"
  },
  "dependencies": {
    "@sprucelabs/error": "^5.0.540",
    "@sprucelabs/schema": "^28.5.65",
    "@sprucelabs/spruce-skill-utils": "^28.0.49",
    "globby": "^11.0.4",
    "just-clone": "^6.1.1",
    "lodash": "^4.17.21",
    "mongodb": "^4.1.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^2.0.31",
    "@sprucelabs/jest-json-reporter": "^6.0.519",
    "@sprucelabs/jest-sheets-reporter": "^2.0.21",
    "@sprucelabs/resolve-path-aliases": "^1.1.129",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.386",
    "@sprucelabs/test-utils": "^3.2.53",
    "@types/lodash": "^4.14.189",
    "@types/nedb": "^1.8.12",
    "@types/node": "17.0.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-config-spruce": "^10.11.4",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=12",
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
          "worksheetId": 843037832,
          "testMap": {
            "canCountRecords": "I35",
            "syncing Unique Index On Duped Fields Throws SpruceError (mongo)": "Y107"
          }
        }
      ]
    ]
  }
}
